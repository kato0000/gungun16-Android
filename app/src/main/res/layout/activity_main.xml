<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tech.gungun16.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ぐんぐんへようこそ"
        android:textSize="30dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="○○さんのもくひょう"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="組み立て"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="はみがきをする"
                android:id="@+id/mButton1"
                android:background="#597bf6"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="手をあらう"
                android:id="@+id/mButton2"
                android:textSize="40dp"
                android:background="#f25656" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="かたづける"
                android:id="@+id/mButton3"
                android:background="#64f15f"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="べんきょうをする"
                android:id="@+id/mButton4"
                android:background="#f4ee5c"
                android:textSize="40dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
